        dd.metadata
          a(href='#countries/greece') Japan
            a(href='#time/600-BC') 1530
            a(href='#search?query=love+show=any') nature
            a(href='#search?query=lyric+show=any') seasons
            a(href='#search?query=memory+show=any') bugs
